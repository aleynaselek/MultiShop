@model UpdateProductDetailDto

@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Açıklama ve Bilgi Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductDetailID" />
                        <input type="hidden" asp-for="ProductID" />
                        <label>Ürün Açıklaması</label>
                        <textarea type="text" asp-for="ProductDescription" class="form-control" rows="5"></textarea>
                        <br /> 
                        <label>Ürün Bilgisi</label>
                        <textarea asp-for="ProductInfo" class="form-control" rows="5"></textarea>
                        <br />
                        <button type="submit" class="btn btn-primary">Ürün Açıklaması ve Bilgisi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

