@model UpdateCommentDto

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Hakkımda Alanı Güncelleme Sayfası</h4> <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post"> 
                        <input type="hidden" asp-for="UserCommentId" />
                        <label>Açıklama</label>
                        <input type="text" asp-for="NameSurname" class="form-control" />
                        <br />
                        <label>Adres</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <br />
                        <label>Email</label>
                        <input type="text" asp-for="CommentDetail" class="form-control" />
                        <br />
                        <label>Telefon</label>
                        <input type="text" asp-for="ImageURl" class="form-control" />
                        <br />
                        <button type="submit" class="btn btn-primary">Hakkımda Alanını Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
